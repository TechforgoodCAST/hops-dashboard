<div class="flex flex-column h-full items-center">
  <div class="max-w-sm mx-auto px-4 my-8">
    <div class="card mb-4">
      <h1 class="text-2xl font-bold mb-6"><%= t('.change_your_password') %></h1>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <%= f.input :password, input_html: { class: 'w-full', autofocus: true }, hint: '6 or more characters' %>

        <%= f.input :password_confirmation, input_html: { class: 'w-full' } %>

        <%= f.submit "Change password", class: 'btn btn-primary w-full' %>
      <% end %>
    </div>

    <%= render 'devise/shared/links' %>
  </div>
</div>