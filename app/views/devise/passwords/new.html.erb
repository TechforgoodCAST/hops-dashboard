<div class="flex flex-column h-full items-center">
  <div class="max-w-sm mx-auto px-4 my-8">
    <div class="card mb-4">
      <h1 class="text-2xl font-bold mb-6"><%= t('.forgot_your_password') %></h1>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.input :email, input_html: { class: 'w-full', autofocus: true } %>
        <%= f.submit 'Send reset instructions', class: 'btn btn-primary w-full' %>
      <% end %>
    </div>

    <%= render 'devise/shared/links' %>
  </div>
</div>